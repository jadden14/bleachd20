<form>
    {{#if isCharacter}}

    <div class="hp-field form-group">
        <input type="number" class="number-lg" name="hp.max" value="{{source.max}}"
               placeholder="{{hp.max}}" data-tooltip="BLEACHD20.HitPointsOverride">
    </div>

    <div class="form-group">
        <label>{{localize "BLEACHD20.HitPointsBonusLevel"}}</label>
        <input type="text" name="hp.bonuses.level" value="{{hp.bonuses.level}}">
    </div>
    <div class="form-group">
        <label>{{localize "BLEACHD20.HitPointsBonusOverall"}}</label>
        <input type="text" name="hp.bonuses.overall" value="{{hp.bonuses.overall}}">
    </div>

    {{else}}

    <div class="hp-field form-group">
        <input type="number" class="number-lg" name="hp.max" value="{{ source.max }}" data-tooltip="BLEACHD20.HitPointsMax">
    </div>

    <div class="form-group">
        <label>{{localize "BLEACHD20.HPFormula"}}</label>
        <div class="form-fields">
            <input type="text" name="hp.formula" value="{{hp.formula}}">
            <button class="roll-hit-points"><i class="fas fa-dice"></i> {{localize "BLEACHD20.Roll"}}</button>
        </div>
    </div>

    {{/if}}

    <hr>

    <div class="form-group">
        <label>{{ localize "BLEACHD20.HitPointsTempShort" }}</label>
        <div class="form-fields">
            {{ numberInput source.temp name="hp.temp" min=0 step=1 }}
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "BLEACHD20.HitPointsTempMaxShort"}}</label>
        <div class="form-fields">
            <input type="number" name="hp.tempmax" value="{{source.tempmax}}">
        </div>
    </div>

    <button type="submit">
        <i class="far fa-save"></i> {{localize "Save"}}
    </button>
</form>
