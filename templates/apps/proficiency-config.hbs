<form autocomplete="off">
    <p class="notes">{{localize "BLEACHD20.ProficiencyConfigurationHint"}}</p>
    <div class="form-group">
        <label>{{localize "BLEACHD20.ProficiencyLevel"}}</label>
        <select name="system.{{property}}.{{key}}.value" data-dtype="Number">
            {{selectOptions proficiencyLevels selected=entry.value}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "BLEACHD20.AbilityModifier"}}</label>
        <select name="system.{{property}}.{{key}}.ability">
            {{selectOptions abilities selected=entry.ability labelAttr="label"}}
        </select>
    </div>
    <div class="form-group">
        <label>{{localize "BLEACHD20.CheckBonus"}}</label>
        <input name="system.{{property}}.{{key}}.bonuses.check" type="text" value="{{entry.bonuses.check}}">
    </div>
    {{#if isSkill}}
    <div class="form-group">
        <label>{{localize "BLEACHD20.SkillBonusPassive"}}</label>
        <input name="system.skills.{{key}}.bonuses.passive" type="text" value="{{entry.bonuses.passive}}">
    </div>
    <hr>
    <div class="form-group">
        <label>{{localize "BLEACHD20.BonusAbilitySkill"}}</label>
        <input name="system.bonuses.abilities.skill" type="text" value="{{system.bonuses.abilities.skill}}">
        <p class="notes">{{localize "BLEACHD20.SkillGlobalBonusCheckHint"}}</p>
    </div>
    {{/if}}
    <button type="submit"><i class="far fa-save"></i> {{localize "Submit"}}</button>
</form>
