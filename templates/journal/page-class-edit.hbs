<form class="{{ cssClass }} flexcol drop-target" autocomplete="off">
    {{> journalEntryPageHeader }}

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.Item" }}</label>
        <div class="form-fields">
            <ol class="items-list">
                {{#if document.system.item}}
                <li class="item flexrow" data-item-uuid="{{ document.system.item }}" data-item-type="linked">
                    <div class="item-name">{{{ bleachd20-linkForUuid document.system.item }}}</div>
                    <div class="item-controls flexrow">
                        <a class="item-control item-delete" data-tooltip="BLEACHD20.ItemDelete"
                           aria-label="{{ localize 'BLEACHD20.ItemDelete' }}">
                            <i class="fa-solid fa-trash" inert></i>
                        </a>
                    </div>
                </li>
                {{else}}
                <li class="item flexrow">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.ItemHint" }}</li>
                {{/if}}
            </ol>
        </div>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.Description" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.value">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.BLEACHD20.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.DescriptionHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalHitPoints" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalHitPoints">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.BLEACHD20.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalHitPointsHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalTraits" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalTraits">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.BLEACHD20.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalTraitsHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalEquipment" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.additionalEquipment">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.BLEACHD20.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.AdditionalEquipmentHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.SubclassHeader" }}</label>
        <div class="form-fields">
            <input type="text" name="system.subclassHeader" value="{{system.subclassHeader}}">
        </div>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.SubclassDescription" }}</label>
        <div class="form-fields">
            <button class="launch-text-editor" data-target="system.description.subclass">
                <i class="fas fa-edit" inert></i> {{ localize "JOURNALENTRYPAGE.BLEACHD20.EditDescription" }}
            </button>
        </div>
        <p class="hint">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.SubclassDescriptionHint" }}</p>
    </div>

    <div class="form-group">
        <label>{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.SubclassItems" }}</label>
        <div class="form-fields">
            <ol class="items-list">
                {{#each subclasses}}
                <li class="item flexrow" data-item-uuid="{{this.document.uuid}}" data-item-type="subclass">
                    <div class="item-name">{{{ bleachd20-linkForUuid this.document.uuid }}}</div>
                    <div class="item-controls flexrow">
                        <a class="item-control item-delete" data-tooltip="BLEACHD20.ItemDelete"
                           aria-label="{{ localize 'BLEACHD20.ItemDelete' }}">
                            <i class="fas fa-trash" inert></i>
                        </a>
                    </div>
                </li>
                {{else}}
                <li class="item flexrow">{{ localize "JOURNALENTRYPAGE.BLEACHD20.Class.SubclassHint" }}</li>
                {{/each}}
            </ol>
        </div>
    </div>
</form>
